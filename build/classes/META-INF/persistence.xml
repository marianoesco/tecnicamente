<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="tecnicamentePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>modelo.Cliente</class>
    <class>modelo.Compra</class>
    <class>modelo.DetalleCompra</class>
    <class>modelo.DetalleVenta</class>
    <class>modelo.Equipo</class>
    <class>modelo.EstadoServicio</class>
    <class>modelo.Localidad</class>
    <class>modelo.Marca</class>
    <class>modelo.NivelDeUsuario</class>
    <class>modelo.Permiso</class>
    <class>modelo.Producto</class>
    <class>modelo.ProductoIncluido</class>
    <class>modelo.Provincia</class>
    <class>modelo.Servicio</class>
    <class>modelo.ServicioIncluido</class>
    <class>modelo.ServicioTecnico</class>
    <class>modelo.TipoEquipo</class>
    <class>modelo.TipoProducto</class>
    <class>modelo.Usuario</class>
    <class>modelo.Venta</class>
    <class>modelo.Pago</class>
    <class>modelo.TipoPago</class>
    <shared-cache-mode>ALL</shared-cache-mode>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tecnicamente?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
